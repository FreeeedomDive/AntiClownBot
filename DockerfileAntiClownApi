FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build

WORKDIR /certificate
RUN dotnet dev-certs https --clean
RUN dotnet dev-certs https -ep ./https/certificate.pfx -p aspnet
RUN dotnet dev-certs https --trust

RUN rm -f /etc/localtime \
&& ln -sv /usr/share/zoneinfo/Asia/Yekaterinburg /etc/localtime \
&& echo "Asia/Yekaterinburg" > /etc/timezone

WORKDIR /src
COPY ["AntiClownApi/AntiClownApi.csproj", "AntiClownApi/"]
COPY ["AntiClownApi.Client.Dto/AntiClownApi.Client.Dto.csproj", "AntiClownApi.Client.Dto/"]
RUN dotnet restore "AntiClownApi/AntiClownApi.csproj"
COPY . .

FROM build AS publish
WORKDIR "/src/AntiClownApi"
RUN dotnet publish "AntiClownApi.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS final
WORKDIR /app
COPY --from=build /certificate /certificate
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "AntiClownApi.dll"]
