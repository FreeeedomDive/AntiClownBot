FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src

RUN rm -f /etc/localtime \
&& ln -sv /usr/share/zoneinfo/Asia/Yekaterinburg /etc/localtime \
&& echo "Asia/Yekaterinburg" > /etc/timezone

COPY ["AntiClownBot.DiscordBot/AntiClownBot.DiscordBot.csproj", "AntiClownBot.DiscordBot/"]
COPY ["AntiClownApi.Client.Dto/AntiClownApi.Client.Dto.csproj", "AntiClownApi.Client.Dto/"]
COPY ["AntiClownApi.Client/AntiClownApi.Client.csproj", "AntiClownApi.Client/"]
COPY ["Dto/Dto.csproj", "Dto/"]
COPY ["CommonServices/CommonServices.csproj", "CommonServices/"]
COPY ["RestClient/RestClient.csproj", "RestClient/"]
RUN dotnet restore "AntiClownBot.DiscordBot/AntiClownBot.DiscordBot.csproj"
COPY . .

FROM build AS publish
WORKDIR "/src/AntiClownBot.DiscordBot"
RUN dotnet publish "AntiClownBot.DiscordBot.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "AntiClownBot.DiscordBot.dll"]
